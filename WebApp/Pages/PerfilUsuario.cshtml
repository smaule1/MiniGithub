@page
@model WebApp.Pages.PerfilUsuarioModel
@{
    Layout = "_UsuarioLayout";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Perfil de Usuario</title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4 text-center">Perfil de Usuario</h1>
        <div id="userInfo" class="mb-4 p-4 bg-light rounded shadow-sm">
            <h2>Bienvenido, <span id="userName" class="fw-bold"></span></h2>
            <p>Email: <span id="userEmail" class="text-muted"></span></p>
        </div>
        <h3 class="mb-3 text-center">Tus Reseñas</h3>
        <div class="row" id="reviewCards">
            <!-- Las cartas de reseñas se cargarán aquí -->
        </div>
        <!-- Placeholder si no hay reseñas -->
        <div id="noReviewsMessage" class="text-center text-muted" style="display: none;">
            <p>No has realizado ninguna reseña todavía.</p>
        </div>
    </div>

    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Custom JS -->
    <script src="~/js/pages/perfilusuario.js" defer></script>
</body>
</html>
