@page
@model WebApp.Pages.HomePageModel
@{
	Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <!-- Contenido de la página -->
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card mt-5 shadow-lg">
                    <div class="card-header text-center bg-primary text-white">
                        <h2>Bienvenido a el mejor sistema de reseñas multimedia del mundo</h2>
                    </div>
                    <div class="card-body text-center">
                        <h1 class="display-4">¡Bienvenido!</h1>
                        <p class="lead mt-4">
                            Bienvenido a Sin Nombre, tu sistema de gestión de contenido multimedia. Aquí puedes gestionar y revisar el contenido fácilmente. Explora nuestras funcionalidades y comienza a utilizar la plataforma hoy mismo.
                        </p>
                        <a class="nav-link text-dark" asp-area="" asp-page="/Repositories">Repositories</a>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
