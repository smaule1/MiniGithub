@page
@model WebApp.Pages.RegistroReviewModel
@{
    Layout = "_UsuarioLayout";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hacer una Review</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.0/css/bootstrap.min.css" rel="stylesheet">
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Bootstrap Bundle with Popper -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.0/js/bootstrap.bundle.min.js"></script>
    <!-- Custom JS -->
    <script src="~/js/pages/registroreview.js" defer></script>
    <!-- Custom CSS -->
    <link href="~/css/custom.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card shadow-lg">
                    <div class="card-header text-center bg-primary text-white">
                        <h2>Hacer una Review</h2>
                    </div>
                    <div class="card-body">
                        <form id="hacerReviewForm">
                            <!-- Campo oculto para almacenar el ID del contenido -->
                            <input type="hidden" id="contenidoId" name="contenidoId" value="">

                            <div class="mb-3">
                                <label for="textoReview" class="form-label">Texto de la Review</label>
                                <textarea class="form-control" id="textoReview" name="textoReview" rows="4" placeholder="Escribe tu reseña aquí..." required></textarea>
                            </div>
                            <div class="mb-3">
                                <label for="calificacion" class="form-label">Calificación</label>
                                <input type="number" class="form-control" id="calificacion" name="calificacion" min="1" max="5" placeholder="Califica de 1 a 5" required>
                            </div>
                            <div class="d-grid">
                                <button type="button" id="btnHacerReview" class="btn btn-success">Enviar Review</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
