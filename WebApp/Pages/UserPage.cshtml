@page
@model WebApp.Pages.Shared.UserPageModel
@{
    Layout = "_Layout";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="~/js/pages/UserPage.js" defer></script>
</head>
<body>
    <div class="container">
        <div class="row align-items-center mb-4 border-bottom border-2">
            <h1 id="repoName" class="col-auto">Nombre de Usuario</h1>
        </div>
        <div class="row">
            <div class="col-8">                
                <div class="row col-6 mt-3 py-2">
                    <h3>Repositorios Públicos</h3>
                    <div id="publicList" class="list-group">
                    </div>
                </div>

                <div class="row col-6 mt-3 py-2">
                    <h3>Repositorios Privados</h3>
                    <div id="privateList" class="list-group">
                    </div>
                </div>

                <div class="row col-6 mt-3 py-2">
                    <h3>Repositorios Suscritos</h3>
                    <div id="privateList" class="list-group">
                        <a href="/HomePage" class="list-group-item list-group-item-action">Not implemted yet</a>
                    </div>
                </div>

            </div>
            <div class="col-4 border-start p-4">
                <button id="createBtn" type="button" class="btn btn-primary w-100 m-2">Crear Nuevo Repositorio</button>

                <button id="changeDetailsBtn" type="button" class="btn btn-info w-100 m-2">Cambiar Nombre de Usuario / Contraseña</button>

                <div id="changeDetails" class="mt-4 d-none" style="margin-left: 15px; margin-bottom: 10px;">
                    <h5>Cambiar Detalles</h5>
                    <form id="changeDetailsForm">
                        <div class="mb-3">
                            <label for="newUsername" class="form-label">Nuevo Nombre de Usuario</label>
                            <input type="text" id="newUsername" class="form-control" placeholder="Ingresa tu nuevo nombre de usuario">
                        </div>
                        <div class="mb-3">
                            <label for="currentPassword" class="form-label">Contraseña Actual</label>
                            <input type="password" id="currentPassword" class="form-control" placeholder="Ingresa tu contraseña actual">
                        </div>
                        <div class="mb-3">
                            <label for="newPassword" class="form-label">Nueva Contraseña</label>
                            <input type="password" id="newPassword" class="form-control" placeholder="Ingresa tu nueva contraseña">
                        </div>
                        <div class="mb-3">
                            <label for="confirmPassword" class="form-label">Confirmar Nueva Contraseña</label>
                            <input type="password" id="confirmPassword" class="form-control" placeholder="Confirma tu nueva contraseña">
                        </div>
                        <button type="submit" class="btn btn-info w-100">Guardar Cambios</button>
                    </form>
                </div>

                <div id="alertDiv" style="margin-left: 15px; margin-top 15px;">
                </div>

                <button id="sessionBtn" type="button" class="btn btn-secondary w-100 m-2">Cerrar Sesión</button>

                <button id="deleteAccountBtn" type="button" class="btn btn-danger w-100 m-2">Eliminar Cuenta</button>

                <div id="alertDiv2" style="margin-left: 15px; margin-top 15px;">
                </div>
            </div>
        </div>                                    
    </div>
</body>
</html>

