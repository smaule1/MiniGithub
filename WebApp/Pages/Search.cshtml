@page
@model WebApp.Pages.SearchModel
@{
    Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="~/js/pages/Search.js" defer></script>
</head>
<body>

    <div class="container">
                
        <div class="row">
            <div class="input-group mb-3">
                <input id="searchField" type="text" class="form-control" placeholder="Nombre repositorio" aria-label="Recipient's username" aria-describedby="button-addon2">
                <button id="searchButton" class="btn btn-outline-secondary" type="button">Search</button>
            </div>
        </div>        

        <div class="row mt-3">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Visibility</th>
                        <th>Tags</th>
                    </tr>
                </thead>
                <tbody id="tableRepos" class="table group-divider">
                    <!-- Rows generated in js-->

                </tbody>
            </table>
        </div>
    </div>
    

</body>
</html>
